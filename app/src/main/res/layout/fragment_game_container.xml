<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:backgroundTint="@android:color/transparent"
    tools:context=".fragments.game.GameContainerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="81dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="81dp"
            android:ellipsize="start"
            android:fontFamily="@font/medieval_scroll_of_wisdom"
            android:gravity="center"
            android:text="@string/games"
            android:textColor="#000000"
            android:textSize="33sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/gameDropList"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginStart="81dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="81dp"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:theme="@style/medievalStyle"
            app:layout_constraintBottom_toTopOf="@+id/buttonEditGame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.142" />

        <Button
            android:id="@+id/buttonCreateGame"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="81dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/medieval_scroll_of_wisdom"

            android:text="Create Game"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonDeleteGame" />

        <Button
            android:id="@+id/buttonLoadGame"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="81dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/medieval_scroll_of_wisdom"
            android:text="Open Game"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonEditGame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gameDropList" />

        <Button
            android:id="@+id/buttonEditGame"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="81dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/medieval_scroll_of_wisdom"
            android:text="Edit Game"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonDeleteGame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonLoadGame" />

        <Button
            android:id="@+id/buttonDeleteGame"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="81dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/medieval_scroll_of_wisdom"
            android:text="Delete Game"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonCreateGame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonEditGame" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>